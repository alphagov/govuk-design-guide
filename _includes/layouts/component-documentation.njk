{% extends "layouts/sub-navigation.njk" %}
{% from 'macros/unordered-list-item-with-link.njk' import listItemsWithLink %}

{% block content %}
  <div class="govuk-grid-row">
    {% include 'partials/sub-navigation.njk' %}
    
    <div class="govuk-grid-column-three-quarters-from-desktop">
      {% include 'partials/header.njk' %}
      {% include 'partials/when-to-use.njk' %}
      {% include 'partials/when-not-to-use.njk' %}
      {% include 'partials/how-it-works-with-variations.njk' %}
      {% include 'partials/insights.njk' %}
      {% include 'partials/accessibility.njk' %}

      {% if designLibraries[0].link and designLibraries[0].title %}
        <section class="doc-other-libraries">
          <h2 class="govuk-heading-l">How other design systems document this component</h2>
          {% if (designLibraries | length ) > 1 %}
            {{ listItemsWithLink("doc-design-library__list", designLibraries) }}
          {% else %}
            <p class="govuk-body">
              <a class="govuk-link" href="{{ designLibraries[0].link }}">{{ designLibraries[0].title }}</a>
            </p>
          {% endif %}
        </section>
      {% endif %}

      {% include 'partials/issues.njk' %}
      {% include 'partials/help-improve.njk' %}

      {{ appProseScope(content) if content }}

      {% include "layouts/shared/related.njk" %}
    </div>
  </div>
{% endblock %}