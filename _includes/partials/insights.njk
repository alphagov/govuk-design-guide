{% if insights %}
  <section class="doc-evidence and insights">
    <h2 class="govuk-heading-l">Evidence and insights</h2>
    <table class="govuk-table">
      <caption class="govuk-table__caption govuk-table__caption--m">Relevant documents</caption>
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header">Document</th>
          <th scope="col" class="govuk-table__header">Description</th>
          <th scope="col" class="govuk-table__header">Date</th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        {% for i in range(0, insights | length ) %}
        <tr class="govuk-table__row">
          <th scope="row" class="govuk-table__header">
            <a href="{{ insights[i].link }}" class="govuk-link">{{ insights[i].title }}</a>
          </th>
          <td class="govuk-table__cell">{{ insights[i].description | markdown }} </td>
          <td class="govuk-table__cell">{{ insights[i].date }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </section>
{% endif %}